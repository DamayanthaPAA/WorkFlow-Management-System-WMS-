@model WorkFlowMgtSystem.Models.ViewModels.InquiryFileViewModel
@{
    ViewBag.Title = "Inquiry Image Upload";
}

<h2>Inquiry Image Upload</h2>

<div role="form">
    @using (Html.BeginForm("Index", "InquiryFile", FormMethod.Post , new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div>
            @if (ViewBag.Status == "1")
            {
                <div class="form-group has-success">
                    <label class="control-label" for="inputSuccess"><i class="fa fa-check"></i>Customer @ViewBag.Customer Created sucessfully!</label>
                </div>
            }
            else if (ViewBag.Status == "2")
            {
                <div class="form-group has-warning">
                    <label class="control-label" for="inputWarning"> <i class="fa fa-bell-o"></i> Customer @ViewBag.Customer already exists! </label>
                </div>
            }
            else if (ViewBag.Status == "3")
            {
                <div class="form-group has-error">
                    <label class="control-label" for="inputError"><i class="fa fa-times-circle-o"></i> Can not create customer @ViewBag.Customer ! </label>
                </div>
            }
        </div>

                <div class="box-body">

                    <div class="form-group">
                        <label for="exampleInputEmail1">Inquity Id</label>
                        @Html.TextBoxFor(model => model.InquiryID, new { @class = "form-control", MaxLength = 8, Placeholder = "Code", Style = "width:20%" , @readonly = true, @Value = ViewBag.id })
                        @Html.ValidationMessageFor(model => model.InquiryID, "", new { @class = "text-danger" })

                    </div>
                    
                    <div class="form-group">
                        <label for="exampleInputEmail1">Image Name</label>
                        @Html.TextBoxFor(model => model.ImageName, new { @class = "form-control", Placeholder = "Full Name", Style = "width:50%"   , required ="true"})
                        @Html.ValidationMessageFor(model => model.ImageName, "", new { @class = "text-danger" })


                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Upload File</label>
                        @*@Html.TextAreaFor(model => model.CustomerAddress, new { @class = "form-control", Placeholder = "Address", Style = "width:50%" })
                        @Html.ValidationMessageFor(model => model.CustomerAddress, "", new { @class = "text-danger" })*@

                        <div class="form-group">
                            <input type="file" name="imageFileName" required/>
                        </div>

                        </div>

                        <br />
                        <br />

                    </div>
                <!-- /.box-body -->

                    <div class="box-footer">
                        <div class="actionBar">

                            @*<div class="btn btn-primary pl_add btn-small pull-left">
                                @Html.ActionLink("Clear", "CreateCustomer", null, new { @style = "font-size: 12px;color:white;font-family:'Lucida Sans Unicode', 'Lucida Grande', Sans-Serif;text-decoration: none" })
                            </div>*@
                            <button type="submit" class="btn btn-success">Submit</button>
                            <div class="btn btn-primary pl_add btn-small pull-left">
                                @Html.ActionLink("View Image", "ViewImage", new { id =ViewBag.id }, new { @style = "font-size: 12px;color:white;font-family:'Lucida Sans Unicode', 'Lucida Grande', Sans-Serif;text-decoration: none" })
                            </div>
                             
                        </div>
                    </div>

        }
    </div>