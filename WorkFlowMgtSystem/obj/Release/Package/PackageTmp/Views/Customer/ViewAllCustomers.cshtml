@model IEnumerable<WorkFlowMgtSystem.Models.Customer>
@{
    ViewBag.Title = "View All Customers";

}


<div class="box">
    <div class="box-header">
        <h3 class="box-title">All Customers</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Customer Id</th>
                    <th>Code</th>
                    <th>Full Name</th>
                    <th>Contact No</th>
                    <th>Active</th>
                    <th></th>
                    @if (Session["UserGroupName"].ToString().Trim() == "Admin")
                    {
                    <th></th>}
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
            {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.CustomerID)</td>
                        <td>@Html.DisplayFor(modelItem => item.CustomerCode)</td>
                        <td>@Html.DisplayFor(modelItem => item.CustomerName)</td>
                        <td>@Html.DisplayFor(modelItem => item.CustomerMobile)</td>
                        <td>@Html.DisplayFor(modelItem => item.IsActive)</td>


                        <td>@Html.ActionLink("Edit", "EditCustomer", new { id = item.CustomerID })</td>
                        @if (Session["UserGroupName"].ToString().Trim() == "Admin")
                        {
                            /**/

                            <td>@Html.ActionLink("Delete", "DeleteCustomer", new { id = item.CustomerID })</td>
                        }
                    </tr>
                }
            </tbody>



            <tfoot>
                <tr>
                    <th>User Id</th>
                    <th>Code</th>
                    <th>Full Name</th>
                    <th>Active</th>
                    <th></th>
                    @if (Session["UserGroupName"].ToString().Trim() == "Admin")
                    {
                    <th></th>}
                </tr>
            </tfoot>
        </table>
    </div>
    <div class="box-footer">
        <div class="actionBar">

            <div class="btn btn-primary pl_add btn-small pull-left">
                @Html.ActionLink("New Customer", "CreateCustomer", null, new { @style = "font-size: 12px;color:white;font-family:'Lucida Sans Unicode', 'Lucida Grande', Sans-Serif;text-decoration: none" })
            </div>

        </div>
    </div>
    <!-- /.box-body -->
</div>